trix row-wise\n","    for idx in range(len(S)):\n","        S[idx] /= S[idx].sum()\n"," \n","    return S\n"],"execution_count":0,"outputs":[]},{"metadata":{"id":"DYEiPv3KC5Tb","colab_type":"code","outputId":"f28d81b0-a5bb-4e05-ff2b-4868c3066a6d","executionInfo":{"status":"ok","timestamp":1549039892616,"user_tz":-420,"elapsed":11809,"user":{"displayName":"Dac Nguyen","photoUrl":"https://lh4.googleusercontent.com/-aFg9oNWok14/AAAAAAAAAAI/AAAAAAAAAA8/pxAn-kmFKu4/s64/photo.jpg","userId":"01275678335241040197"}},"colab":{"base_uri":"https://localhost:8080/","height":85}},"cell_type":"code","source":["from operator import itemgetter \n","\n","nltk.download('stopwords')\n","nltk.download('wordnet')\n","# get the english list of stopwords\n","stop_words = stopwords.words('english')\n","\n","# Get sentences\n","def textrank(sentences, n_top):\n","    S = build_similarity_matrix(sentences, stop_words)   \n","    sentence_ranks = pagerank(S)\n","    \n","    ranked_sentence_indexes = [item[0] for item in sorted(enumerate(sentence_ranks), key=lambda item: -item[1])]\n","    selected_sentences = sorted(ranked_sentence_indexes[:n_top])\n","    summary = itemgetter(*selected_sentences)(sentences)\n","    \n","    return summary"],"execution_count":0,"outputs":[{"output_type":"stream","text":["[nltk_data] Downloading package stopwords to /root/nltk_data...\n","[nltk_data]   Package stopwords is already up-to-date!\n","[nltk_data] Downloading package wordnet to /root/nltk_data...\n","[nltk_data]   Package wordnet is already up-to-date!\n"],"name":"stderr"}]},{"metadata":{"id":"ESywvaR7GxbN","colab_type":"code","outputId":"c81ecfea-2d47-4dca-db5d-7b3e90981f26","executionInfo":{"status":"ok","timestamp":1549029596111,"user_tz":-420,"elapsed":2124836,"user":{"displayName":"Dac Nguyen","photoUrl":"https://lh4.googleusercontent.com/-aFg9oNWok14/AAAAAAAAAAI/AAAAAAAAAA8/pxAn-kmFKu4/s64/photo.jpg","userId":"01275678335241040197"}},"colab":{"base_uri":"https://localhost:8080/","height":1142